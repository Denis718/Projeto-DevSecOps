pipeline {
    agent any
    stages {
        stage("Verify tooling") {
            steps{
                //jq --version
                sh '''
                    docker compose version
                    curl --version 
                    docker info
                    docker version
                '''
                
            }
        }
      
      
        stage('Github'){
            steps{
                git branch: 'main', url: 'https://github.com/EnricoEng/Projeto-Integrado-DSO.git'
            }
        }
        
        stage("Starting Container") {
            steps{
                sh 'docker compose -f todo_list/docker-compose.yml up -d --no-color --wait'
            }
        }
        
        stage('SCA Analysis with Aqua Trivy') {
            steps {
                sh 'docker run -v $(pwd):/app aquasecurity/trivy:0.19.2 image --format template --template "@contrib/json.tpl" -o trivy-report.json .'
                sh 'cat trivy-report.json'
            }
        }
        
    }
}
